{
  "name": "@dubai/backend",
  "version": "1.0.0",
  "description": "DubAI Backend API Services",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/utils/*.py dist/utils/ 2>/dev/null || xcopy src\\utils\\*.py dist\\utils\\ /Y /I 2>nul || true",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:simple": "node dist/server-simple.js",
    "dev": "ts-node src/server.ts",
    "dev:simple": "ts-node src/server-simple.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.0.0",
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}